<?php $chartId = uniqid() ?>
<div id="<?php echo $chartId ?>" width="400" height="100"></div>
<script>
var data = [
    <?php foreach ($object->data()->series() as $label => $series): ?>
    {
        x: <?php echo json_encode($object->xLabels()->values()) ?>,
        name: <?php echo json_encode($label) ?>,
        y: <?php echo json_encode($series->values()) ?>,
        type: 'bar',
        <?php if ($series->errorMargins()): ?>
        error_y: {
            type: 'data',
            array: <?php echo json_encode($series->errorMargins()) ?>,
            visible: true,
        },
        <?php endif ?>
    },
    <?php endforeach ?>
]
var layout = {barmode: 'group'};
Plotly.newPlot(document.getElementById('<?php echo $chartId ?>'), data, layout);
</script>
